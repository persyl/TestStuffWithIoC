@model TestStuffWithIoC.Models.ApiCaller.ApiCallerViewModel

<h2>@Model.ViewTitle</h2> 
@using (Html.BeginForm("FormPosted", "ApiCaller"))
{
    @Html.Label("Enter a YouTube ID:")
    @Html.TextBoxFor(model => model.SearchPhrase)
    <input type="submit" value="Search at YouTube" />
}  

@if (!string.IsNullOrEmpty(Model.Info))
{
    <p>
        Result from API call:<br />
        @Html.Raw(@Model.Info)
    
        <br /><br />
        <img src="@Model.ThumbnailUrl" alt=""/>
    </p>
}
@section MyColumn2{
    <div>
        This page is going to list result from a API call.
        It is using System.Net.Http.HttpClient.<br />
        @Html.ActionLink("Back to first page", "Index", "Home")
    </div>
}
